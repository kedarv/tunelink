    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.1.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.1.1/firebase-database.js"></script>


  </head>

  <body class="black">

    <div class="container">
      <div id="name" class="row">
        <h4 class="white-text">{{{name}}}</h4>
      </div>
      <div id="now-playing" class="card">
        <h4 class="white-text thicker">Now playing on your Spotify:</h4><br/>
        <div class="song-details row">
          <div class="col s4">
            <img src="{{{img}}}" width="80%"/>
          </div>
          <div class="col s8">
            <span class="thick">{{{song}}}</span><br/><span class="normal">{{{artist}}}</span>
          </div>
        </div>
      </div>

      <div id="up-next" class="card">
        <h4 class="white-text thicker">Up next:</h4><br/>
        <table>
          
        </table>
      </div>

      <button class="btn btn-default" id="obtain-new-token">Obtain new token using the refresh token</button>
    </div>

    <script src="https://www.gstatic.com/firebasejs/4.1.2/firebase.js"></script>
